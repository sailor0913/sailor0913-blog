---
import BaseHead from '../components/BaseHead.vue';
import Navigation from '../components/Navigation.vue';

const { title, description, image } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN" class="bg-cream-100 dark:bg-gray-900">
  <head>
    <BaseHead title={title} description={description} image={image} client:load />
  </head>
  <body class="min-h-screen">
    <Navigation client:load />
    <slot />
  </body>
</html>

<style>
  html, body {
    min-height: 100vh;
  }
</style>
